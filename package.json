  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypermedia-app/hydra-box-web-access-control/issues"
  },
  "homepage": "https://github.com/hypermedia-app/hydra-box-web-access-control#readme",
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "mocha-setup.cjs"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
